generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  firstName     String?
  lastName      String?
  phone         String?
  dateOfBirth   DateTime?
  avatar        String?
  role          String    @default("PATIENT") // "ADMIN", "DOCTOR", "PATIENT"
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  appointments  Appointment[]
  favorites     Favorite[]
  medicalRecords MedicalRecord[]
  healthProfile  HealthProfile?
  payments      Payment[]
  paymentMethods PaymentMethod[]
  doctorProfile Doctor?
  @@map("users")
}

model Doctor {
  id          String    @id @default(cuid())
  userId      String?   @unique
  user        User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  firstName   String?
  lastName    String?
  middleName  String?
  avatar      String?
  specialty   String
  experience  Int?
  education   String?
  bio         String?
  rating      Float     @default(0)
  isAvailable Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  services    Service[]
  appointments Appointment[]
  favorites    Favorite[]
  @@map("doctors")
}

model Service {
  id          String   @id @default(cuid())
  doctorId    String
  name        String
  description String?
  price       Float
  duration    Int      @default(30) // Duration in minutes
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  doctor      Doctor   @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  appointments Appointment[]
  @@map("services")
}

model Appointment {
  id        String   @id @default(cuid())
  userId    String
  doctorId  String
  date      DateTime
  time      String
  status    String   @default("PENDING")
  reason    String?
  notes     String?
  serviceId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  doctor    Doctor   @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  service   Service? @relation(fields: [serviceId], references: [id], onDelete: SetNull)
  payment   Payment?
  @@map("appointments")
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  doctorId  String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  doctor    Doctor   @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  @@unique([userId, doctorId])
  @@map("favorites")
}

model MedicalRecord {
  id          String   @id @default(cuid())
  userId      String
  date        DateTime
  doctorName  String
  specialty   String
  diagnosis   String
  treatment   String?
  medications String?
  notes       String?
  attachments String? // Comma separated URLs
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@map("medical_records")
}

model HealthProfile {
  id                String   @id @default(cuid())
  userId            String   @unique
  height            String?
  weight            String?
  bloodPressure     String?
  heartRate         String?
  temperature       String?
  bloodType         String?
  allergies         String? // JSON string: { medications: [], food: [], environmental: [] }
  chronicConditions String? // JSON string: { conditions: [], medications: [] }
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@map("health_profiles")
}

model Payment {
  id            String   @id @default(cuid())
  userId        String
  appointmentId String?  @unique
  amount        Float
  status        String   @default("PENDING")
  method        String?
  transactionId String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  appointment   Appointment? @relation(fields: [appointmentId], references: [id], onDelete: SetNull)
  @@map("payments")
}

model PaymentMethod {
  id        String   @id @default(cuid())
  userId    String
  type      String   // "card" | "insurance"
  name      String
  number    String
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@map("payment_methods")
}
